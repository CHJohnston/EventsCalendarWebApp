@model Event
    <!--View to Display a Single Event Selected on the Index.cshtml view -->
    <h2>What's Happening!! </h2>

    <table class="table table-striped table-sm table-dark ">
        <tr>
            <th>Event ID</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>Start Time</th>
            <th>End Date</th>
            <th>End Time</th>
            <th>Admission</th>           
        </tr>
        <tr>
            <td>@Model.EventID</td>
            <td>@Model.Name</td>
            <td>@Model.StartDate</td>
            <td>@Model.StartTime</td>
            <td>@Model.EndDate</td>
            <td>@Model.EndTime</td>

            @if (Model.Admission == 0)
            {
                <td>Free</td>
            }
            else
            {
                <td>$@Model.Admission</td>
            }
                        
        </tr>
    </table>


    <br />
    <div style="display: block" class="event-description">
        <h4>Address:</h4> <p>@Model.Address, @Model.City, @Model.State  @Model.Zip </p>
        <h4>Description</h4>
        <p>@Model.Description</p>
        <a href=@Model.Website target="_blank">Visit Event Website</a>
    </div>

    <br />
    <a class="btn btn-primary" href="/Event/UpdateEvent/@Model.EventID">Update Event</a>
    <br />

    <div style="display: block">
        @using (Html.BeginForm("DeleteEvent", "Event", "Post"))
        {
            <input type="hidden" asp-for="EventID" value="@Model.EventID" />
            <input type="submit" onclick="return confirm('Are you sure?')" class="btn btn-danger" value="Delete  Event" />
        }
    </div>

