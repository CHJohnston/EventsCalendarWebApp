@model Event
    <!--View to Update an Existing Event Selected on the Index.cshtml view -->

    @using (Html.BeginForm("UpdateEventToDatabase", "Event", "Post"))
    {
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2>Update Your Event</h2>
                <input asp-for="EventID" type="hidden" value="@Model.EventID" />

                <!-- <label asp-for="CategoryID" class="control-label">@Model.CategoryID</label>
                <input type="text" name="CategoryID" class="form-control" value="" />  -->

                <div class="form-group">
                    <label for="">Select a Category</label>
                    <select class="form-control" name="CategoryID" value="@Model.CategoryID">
                        @foreach (var cat in Model.Categories)
                        {
                            @if (cat.CategoryID != 1)
                            {
                                <option value="@cat.CategoryID">@cat.CategoryID @cat.CategoryName</option>
                            }
                        }
                    </select>
                </div>

                <label asp-for="Name" class="control-label">Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" />

                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input type="date" name="StartDate" class="form-control" value="@Model.StartDate" />

                <label asp-for="StartTime" class="control-label">Start Time</label>
                <input type="time" name="StartTime" class="form-control" value="@Model.StartTime" />

                <label asp-for="EndDate" class="control-label">End Date</label>
                <input type="date" name="EndDate" class="form-control" value="@Model.EndDate" />

                <label asp-for="EndTime" class="control-label">End Time</label>
                <input type="time" name="EndTime" class="form-control" value="@Model.EndTime" />

                <label asp-for="Admission" class="control-label">Admission</label>
                <input type="number" step="0.00" name="Admission" class="form-control" value="@Model.Admission" />

                <label asp-for="Address" class="control-label">Address</label>
                <input type="text" name="Address" class="form-control" value="@Model.Address" />

                <label asp-for="City" class="control-label">City</label>
                <input type="text" name="City" class="form-control" value="@Model.City" />

                <label asp-for="State" class="control-label">State</label>
                <input type="text" name="State" class="form-control" value="@Model.State" />

                <label asp-for="Zip" class="control-label">Zip</label>
                <input type="number" name="Zip" class="form-control" value="@Model.Zip" />

                <label asp-for="Description" class="control-label">Description</label>
                <input type="text" name="Description" class="form-control" value="@Model.Description" />

                <label asp-for="Website" class="control-label">Website</label>
                <input type="text" name="Website" class="form-control" value="@Model.Website" />

                <input type="submit" value="Update Event" class="btn btn-primary" />
            </div>
        </div>
    }
